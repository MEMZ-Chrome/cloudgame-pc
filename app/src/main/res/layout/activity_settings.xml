<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 鼠标灵敏度 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="鼠标灵敏度"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <SeekBar
                android:id="@+id/mouse_speed_seekbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="50" />

            <TextView
                android:id="@+id/mouse_speed_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textSize="14sp"
                android:layout_marginStart="16dp"
                android:minWidth="32dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- 清除浏览器数据 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="浏览器数据"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/clear_data_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="清除浏览器数据"
            android:layout_marginBottom="24dp" />

        <!-- 无派蒙设置组 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无派蒙"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/no_paimon_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在触屏使用时显示虚拟按键"
            android:layout_marginBottom="24dp" />

        <!-- 开发者选项 -->
        <LinearLayout
            android:id="@+id/developer_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开发者选项"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/ua_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="浏览器UA设置"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/inject_console_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注入控制台"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

